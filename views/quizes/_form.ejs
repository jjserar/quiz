<div class="field">
    <label for="preg" class="rem">Pregunta:</label>
    <input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/>
</div>
<div class="field">
    <label for="resp" class="rem">Respuesta:</label>
    <input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
</div>
<div class="field">
    <label for="tema" class="rem">Tema:</label>
    <select id="tema" name="quiz[tema]">
    <% 
        var temas = ['Otro', 'Humanidades', 'Ocio', 'TV', 'Ciencia', 'Tecnología', 'Geografía'];
        var selOption = quiz.tema || "Otro";
        for (t in temas) {
    %>
        <option value="<%= temas[t] %>"<%= (temas[t] === selOption)?" selected":"" %>><%= temas[t] %></option>
    <% } %>
    </select>
</div>
<div>
    <a href="/quizes"><button type="button">Cancelar</button></a>
    <input type="submit" value="Guardar">
</div>